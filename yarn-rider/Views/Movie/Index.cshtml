@model IEnumerable<yarn_rider.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="row justify-content-between">
    <div class="col">
        <h4>Stream Movies</h4>
    </div>
    <div class="col text-right">
        <div class="btn btn-primary text-right">@Html.ActionLink("Create New", "Create")</div>
    </div>
</div>

<div class="row justify-content-lg-between">
    <div class="col">
    </div>
</div>



<table class="table border-primary">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PosterURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovieName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.PosterURL)" style="width: 10rem;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td></td>
        </tr>
    }
</table>
