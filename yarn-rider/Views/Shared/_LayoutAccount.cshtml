@{
    ViewBag.Title = "_LayoutAccount";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="m-0 p-0" style="font-family:Rubik; color:#8e8f9e">


@RenderBody()


<!-- ------------------------------------ -->
<!-- FOOTER -->
<!-- ------------------------------------ -->

<div class="bg-secondary">
    <footer class="container py-4 ">
        <div class="row">
            <div class="col-1 pt-2">
                <img class="img-fluid" alt="yarn" src="~/Images/logo0.5.svg"
                     style="opacity: 0.4;">
            </div>
            <div class="col">
                <p class="align-middle">
                    yarn is a platform for streaming content
                    <b>
                        <i style="text-shadow: 1px 1px 0px #000000;color: #6d6d79;">lighting-fast</i>
                    </b>
                    <br>&copy; yarn @DateTime.Now.Year
                    <br/><br/>
                    @Html.ActionLink("Locations","Locations", "Home", null, new { color="#6d6d79" })
                </p>
            </div>
        </div>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>